                Show all photos
            </div>
        </div>
      </div>
    </div>
</div>


   {% schema %}
  {
     "name": "simple-product-images",
     "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "tooltip",
            "label": "Tooltip",
            "default": "Photos are generic. They are not actual images of each unique product."
          }, 
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
     ],
     "presets": [
        {
            "name": "simple-product-images"
        }
     ]
  }
  {% endschema %}