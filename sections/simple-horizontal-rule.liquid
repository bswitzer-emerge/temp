{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
   
  }
  .section-{{ section.id }}-padding .page-width {
    position: relative;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding .bg {
      padding-left: 35px;
    padding-right: 35px;
    }
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

    <div class="simple-horizontal-rule  section-{{ section.id }}-padding" >
      <div class=" page-width">
        <hr class=" {{ section.settings.default }}">
      </div>
    </div>
  
  {% schema %}
  {
     "name": "simple-horizontal-rule-hr",
     "settings": [
      {
        "type": "select",
        "id": "style",
        "options": [
          {
            "value": "default",
            "label": "Default"
          },
          {
            "value": "alternative",
            "label": "alternative"
          }
        ],
        "default": "default",
        "label": "Default"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
     ],
     "presets": [
        {
            "name": "simple-horizontal-rule-hr"
        }
     ]
  }
  {% endschema %}