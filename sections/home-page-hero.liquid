
<div class="hero-home-container {% if customer %} signed-in {% endif %}">
  <div class="hero-home page-width">
      <div class="content">
        <div class="row">
          <div class="col1 ">
            {% if customer %}
              <h4>Hey, {{ customer.first_name }}!</h4>
              <h1>{{ section.settings.loggedin-heading }}</h1>
              <h4 class="hero-home-mb"> {{ section.settings.loggedin-subheading }}</h4>
            {% else %}
              <h1>{{ section.settings.heading }}</h1>
              <h4>{{ section.settings.subheading }}</h4>
            {% endif %}
            <div class="buttons">
              {% if customer %}
                <a href="/collections/battery-packs" class="btn primary">Marketplace</a>
                <a href="/pages/how-to-buy" class="btn tertiary">How to Buy</a>
              {% else %}
                <a href="/pages/contact?contact=supplier" class="btn primary">Register for Access</a>
                <a href="#whyweexist" class="btn tertiary">Learn More</a>
              {% endif %}
            </div>
        </div>
          <div class="col2">
            {% if customer %}
              <img src="https://cdn.shopify.com/s/files/1/0713/1312/9756/files/nissan-page.png?v=1697754375" />
              {% else %}
              <img src="https://cdn.shopify.com/s/files/1/0719/5269/5597/files/hero-combined.webp?v=1691103532" />
            {% endif %}
          </div>
        </div>
        <p>Exclusive marketplace for: <img src="https://cdn.shopify.com/s/files/1/0719/5269/5597/files/nissan_4r.webp?v=1689980626" id="nissan-logo"></p>
      </div>
  </div>
  {{ section.settings.svg }}
</div>




