{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
   
  }
  .section-{{ section.id }}-padding .page-width {
    position: relative;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding .bg {
      padding-left: 35px;
    padding-right: 35px;
    }
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

    <div class="simple-text  section-{{ section.id }}-padding" >
      <div class=" page-width">
        <div class="simple-content">
        <p class="{{ section.settings.size }} {{ section.settings.content_alignment }}   {{ section.settings.text_style }}  ">{{ section.settings.body }}</p>
        </div>
      </div>
    </div>
  
  {% schema %}
  {
     "name": "simple-text",
     "settings": [
      {
        "type": "select",
        "id": "content_alignment",
        "options": [
          {
            "value": "left",
            "label": "t:sections.rich-text.settings.content_alignment.options__1.label"
          },
          {
            "value": "center",
            "label": "t:sections.rich-text.settings.content_alignment.options__2.label"
          },
          {
            "value": "right",
            "label": "t:sections.rich-text.settings.content_alignment.options__3.label"
          }
        ],
        "default": "left",
        "label": "t:sections.rich-text.settings.content_alignment.label"
      },
      {
        "type": "richtext",
        "id": "body",
        "default": "<p>Talk about your brand</p>",
        "label": "t:sections.rich-text.blocks.heading.settings.heading.label"
      },
      {
        "type": "select",
        "id": "text_style",
        "options": [
          {
            "value": "paragraph",
            "label": "paragraph"
          },
          {
            "value": "large",
            "label": "large"
          }
        ],
        "default": "paragraph",
        "label": "Text size"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
     ],
     "presets": [
        {
            "name": "simple-text"
        }
     ]
  }
  {% endschema %}