{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
   
  }
  .section-{{ section.id }}-padding .page-width {
    position: relative;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding .bg {
      padding-left: 35px;
    padding-right: 35px;
    }
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


    <div class="simple-product-description  section-{{ section.id }}-padding" >
      <div class=" page-width">
        <h2 class="{{ section.settings.size }}">{{ section.settings.head }}</h2>
        <div class="{{ section.settings.size }}  {{ section.settings.text_style }}  ">  
            {%- if product.description != blank -%}
            <div class="product__description rte quick-add-hidden">
            {{ product.description }}
            </div>
            {%- endif -%}
        </div>
      </div>
    </div>
  
  {% schema %}
  {
     "name": "simple-product-description",
     "settings": [
        {
            "type": "text",
            "id": "head",
            "label": "Header",
            "default": "Header"
          }, 
          {
            "type": "select",
            "id": "size",
            "options": [
              {
                "value": "h1",
                "label": "h1"
              },
              {
                "value": "h2",
                "label": "h2"
              },
              {
                "value": "h3",
                "label": "h3"
              },
              {
                "value": "h4",
                "label": "h4"
              }
            ],
            "default": "h2",
            "label": "Text size"
          },
      {
        "type": "select",
        "id": "text_style",
        "options": [
          {
            "value": "paragraph",
            "label": "paragraph"
          },
          {
            "value": "large",
            "label": "large"
          }
        ],
        "default": "paragraph",
        "label": "Text size"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
     ],
     "presets": [
        {
            "name": "simple-product-description"
        }
     ]
  }
  {% endschema %}