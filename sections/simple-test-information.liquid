{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
   
  }
  .section-{{ section.id }}-padding .page-width {
    position: relative;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding .bg {
      padding-left: 35px;
    padding-right: 35px;
    }
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

    <div class="simple-test-information  section-{{ section.id }}-padding" >
      <div class=" page-width">
        <div class="simple-content">
            <div class="row">
                <div class="col-1">
                  <h2 class="{{ section.settings.size }}">{{ section.settings.head }}</h2>
                </div>
                <div class="col-2">
                  {% assign soh_value = product.metafields.custom.soh.value %}

                  {% if soh_value >= 0 and soh_value <= 59 %}
                    {% assign do_stuff = "red" %}
                  {% elsif soh_value >= 60 and soh_value <= 69 %}
                    {% assign do_stuff = "orange" %}
                  {% elsif soh_value >= 70 and soh_value <= 79 %}
                    {% assign do_stuff = "yellow" %}
                  {% elsif soh_value >= 80 and soh_value <= 89 %}
                    {% assign do_stuff = "med-green" %}
                  {% elsif soh_value >= 90 and soh_value <= 100 %}
                    {% assign do_stuff = "green" %}
                  {% endif %}


                    <span class="circle {{ do_stuff }}" id="test-info-circle"></span>


                   
                    <span id="soh-percentage">{{ product.metafields.custom.soh }}%</span>

                    <svg height="20" id="calendar-icon" viewBox="0 0 19.8 20" width="19.8" xmlns="http://www.w3.org/2000/svg"><path d="m1.65 22c-.44 0-.825-.15-1.155-.45s-.495-.65-.495-1.05v-15.5c0-.4.165-.75.495-1.05s.715-.45 1.155-.45h1.7875v-1.5h1.7875v1.5h9.35v-1.5h1.7875v1.5h1.7875c.44 0 .825.15 1.155.45s.495.65.495 1.05v15.5c0 .4-.165.75-.495 1.05s-.715.45-1.155.45zm0-1.5h16.5v-10.75h-16.5z" fill="#222" transform="translate(0 -2)"/></svg>
                    Tested on
                    {{ product.metafields.custom.soh_test_date | date: "%-m/%-d/%Y" }}
                </div> {% comment %} col2  {% endcomment %}
          </div> {% comment %} row  {% endcomment %}
        </div> {% comment %} simple content  {% endcomment %}
      </div> {% comment %} page width  {% endcomment %}
    </div> {% comment %} simple test information  {% endcomment %}

  
  
  {% schema %}
  {
     "name": "simple-test-information",
     "settings": [

      {
        "type": "text",
        "id": "head",
        "label": "Header",
        "default": "Header"
      }, 
      {
        "type": "select",
        "id": "size",
        "options": [
          {
            "value": "h1",
            "label": "h1"
          },
          {
            "value": "h2",
            "label": "h2"
          },
          {
            "value": "h3",
            "label": "h3"
          },
          {
            "value": "h4",
            "label": "h4"
          }
        ],
        "default": "h2",
        "label": "Text size"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
     ],
     "presets": [
        {
            "name": "simple-test-information"
        }
     ]
  }
  {% endschema %}