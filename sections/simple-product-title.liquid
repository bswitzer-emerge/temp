  {% schema %}
  {
     "name": "simple-product-title",
     "settings": [

      {
        "type": "text",
        "id": "head",
        "label": "Header",
        "default": "Header"
      }, 
      {
        "type": "select",
        "id": "size",
        "options": [
          {
            "value": "h1",
            "label": "h1"
          },
          {
            "value": "h2",
            "label": "h2"
          },
          {
            "value": "h3",
            "label": "h3"
          },
          {
            "value": "h4",
            "label": "h4"
          }
        ],
        "default": "h2",
        "label": "Text size"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
     ],
     "presets": [
        {
            "name": "simple-product-title"
        }
     ]
  }
  {% endschema %}